.row
  .col-lg-12
    = simple_form_for word, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
      = f.input :gender, as: :select, collection: [["Feminine", "feminine"], ["Masculine", "masculine"], ["Neuter", "neuter"], ["Plural", "plural"]]
      = f.input :content
      = f.input :translation
      = f.input :synonyms
      = f.input :antonyms
      = f.input :excerpt, as: :text
      .col-lg-offset-2.col-lg-10
        = f.button :submit, class: "btn btn-primary", :"disable-with" => "Wait..."
        = link_to "Cancel", words_path, class: "btn btn-link"
